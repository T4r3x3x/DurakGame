<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DurakClient.MVVM.Views.CreateLobbyView"
			 xmlns:vm ="DurakClient.MVVM.ViewModels.CreateLobbyViewModel">


	<DockPanel LastChildFill="True" VerticalAlignment="Top" HorizontalAlignment="Center">
		<TextBlock DockPanel.Dock="Top" TextAlignment="Center" Text="Create lobby"/>
		<Button Margin="10"  HorizontalAlignment="Center" DockPanel.Dock="Bottom">Create</Button>		
		<NumericUpDown Minimum="{Binding CreateLobbyViewModel.MinPlayersCount}" Value="{Binding CreateLobbyViewModel.MinPlayersCount}" DockPanel.Dock="Bottom"/>
		<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Text="Players count"/>
		<NumericUpDown DockPanel.Dock="Bottom"/>		
		<TextBlock DockPanel.Dock="Bottom" TextAlignment="Center" Text="Start count of cards"/>
		<TextBox Margin="10" DockPanel.Dock="Top" Watermark="Lobby name"/>
		<TextBlock DockPanel.Dock="Left" Text="Deck type"/>
		<ComboBox DockPanel.Dock="Left" ItemsSource="{Binding CreateLobbyViewModel.DeckType}"/>
	
	</DockPanel>
</UserControl>
